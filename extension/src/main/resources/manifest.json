{
  "manifest_version": 2,
  "name": "Markstash",
  "version": "0.1",
  "description": "Bookmark with Markstash",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Bookmark",
    "default_popup": "popup/bookmark.html"
  }
}
